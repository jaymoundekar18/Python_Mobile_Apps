Interface:
    Screen:
        name:"Main Screen"
        BoxLayout:
            orientation:"vertical"
            padding:dp(10)
            spacing:dp(30)
            Label:
                font_size:"34sp"
                text:"To-Do App"
                font_name: "kivy_fonts/shortbaby.ttf"
                size_hint:1,None
                height:dp(80)

            ScrollView:
                do_scroll_y:True
                GridLayout:
                    id: gridLayout
                    cols:1
                    spacing:dp(10)
                    size_hint_y:None
                    height:self.minimum_height


            Button:
                font_size:"26sp"
                text:"Add"
                font_name: "kivy_fonts/chrustyrock.ttf"
                size_hint:0.6,None
                height:dp(60)
                pos_hint: {"center_x": 0.5}
                on_press:root.show_popup()
                background_normal: "images/add.png"

    Screen:
        name: "Details Screen"
        BoxLayout:
            orientation:"vertical"
            padding: dp(10)
            spacing: dp(10)
            Label:
                font_size:"26sp"
                font_name: "kivy_fonts/shortbaby.ttf"
                id: todoTitle
                size_hint_y: None
                height: dp(80)
            TextInput:
                font_size:"18sp"
                font_name: "kivy_fonts/chrustyrock.ttf"
                id: taskData
            Button:
                size_hint: 0.6,None
                height: dp(60)
                font_size:"26sp"
                text: "Back"
                font_name: "kivy_fonts/chrustyrock.ttf"
                pos_hint: {"center_x": 0.5}
                on_press: root.back_btn()
                background_normal: "images/back.png"